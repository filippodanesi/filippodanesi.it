---
import siteConfig from '../data/site-config';

const navLinks = siteConfig.footerNavLinks || [];
---

<footer class="w-full max-w-3xl mx-auto pt-12 pb-10 sm:pt-24 sm:pb-14">
   {
       navLinks.length > 0 && (
           <div class="mb-4 flex flex-wrap gap-x-6 gap-y-1 justify-between">
               <div class="flex flex-wrap gap-x-6 gap-y-1">
                   {navLinks.map((link) => (
                       <a class="font-serif hover:underline hover:underline-offset-2" href={link.href}>
                           {link.text}
                       </a>
                   ))}
               </div>
               <div class="flex flex-wrap gap-x-6 gap-y-1">
                   <a class="font-serif hover:underline hover:underline-offset-2" href="/privacy-policy">Privacy Policy</a>
                   <a class="font-serif hover:underline hover:underline-offset-2" href="/cookie-policy">Cookie Policy</a>
               </div>
           </div>
       )
   }
   <div class="pt-6 flex flex-col gap-4 border-t border-solid border-main sm:flex-row-reverse sm:justify-between sm:items-center">
       <div class="flex flex-wrap gap-x-4 gap-y-1">
           <button
               type="button"
               data-cc="show-preferencesModal"
               class="cky-banner-element inline-flex items-center justify-center px-6 py-2 font-serif text-sm leading-tight italic text-main bg-main border border-main rounded-full transition hover:bg-muted"
           >
               Cookie Settings
           </button>
       </div>
       <p class="text-sm">
        &copy;{new Date().getFullYear()} {siteConfig.title}. All rights reserved.
    </p>
   </div>
</footer>