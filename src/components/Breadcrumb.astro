---
// src/components/Breadcrumb.astro

export type BreadcrumbItem = {
    label: string;
    url?: string;
    colorClass?: string; // Colore opzionale, ma possiamo usare il colore di testo principale per uniformit√†
};

export type Props = {
    links: BreadcrumbItem[];
};

const { links } = Astro.props;
---

<nav aria-label="Breadcrumb" class="text-sm sm:text-base mb-4">
    <ol class="inline-flex items-center space-x-1 sm:space-x-3">
        {
            links.map((item, index) => (
                <li>
                    {item.url ? (
                        <a href={item.url} class={`hover:underline text-[color:var(--color-text-main)]`}>
                            {item.label}
                        </a>
                    ) : (
                        <span class="text-[color:var(--color-text-main)]">{item.label}</span>
                    )}
                    {index < links.length - 1 && <span class="mx-2 text-gray-400">/</span>}
                </li>
            ))
        }
    </ol>
</nav>
